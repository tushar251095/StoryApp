    <% if(errorMessages.length>0){%>
        <%errorMessages.forEach(message=>{%>
            <div class="flashmsg" id="msg">
                <div class="error">
                    <span><%=message%></span>
                    <div class="flashclose" onclick="closeflashmsg()">X</div>
                </div>
            </div>
           
       <% })%>
    <%}%>

    <% if(successMessages.length>0){%>
        <%successMessages.forEach(message=>{%>
            <div class="flashmsg" id="msg">
                <div class="success">
                    <span><%=message%></span>
                    <div class="flashclose" onclick="closeflashmsg()">X</div>
                </div>
            </div>
       <% })%>
    <%}%>