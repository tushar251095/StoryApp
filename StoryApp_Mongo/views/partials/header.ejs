    <script src="/js/common.js"></script>
</head>
<body>
    <nav>
        <h2>Jibber Jabber</h2>
        <a href='/'>Home</a>
        <a href='/stories'>Stories</a>
        <a href='/stories/new'>Create a New Story</a>
